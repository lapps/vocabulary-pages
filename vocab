#!/bin/sh

set -e

# Startup script for the LAPPS Vocabulary processor.

MEMSIZE=4G
DIR=`dirname $0`
JAR=$DIR/vocab-1.2.0-SNAPSHOT.jar

if [ "$1" = "-default" ] ; then
    if [ "$2" = "" ] ; then
        output=html
    else
        output=$2
    fi
    java -jar $JAR -d lapps.vocab -i table-index.groovy -h template.groovy -o $output
    exit
fi

java -jar $JAR $@
